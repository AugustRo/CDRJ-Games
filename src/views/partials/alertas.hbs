
{{#if message}}
<div class="container p-4">
    <div class="row">
        <div class="col-sm-6 mx-auto col-md-auto">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>{{message}}</strong><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if success }}
    <div class="container p-4">
        <div class="row">
            <div class="col-sm-6 mx-auto col-md-auto">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>{{success}}</strong><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>    
                </div>
            </div>
        </div>
    </div>
{{/if}}